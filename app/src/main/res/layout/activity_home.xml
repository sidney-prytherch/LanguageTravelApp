<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:textSize="22sp"
        android:id="@+id/travel_button"
        android:layout_width="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:height="0dp"
        android:onClick="goToTravel"
        android:text="@string/travel_button" />

    <Button
        android:textSize="22sp"
        android:id="@+id/language_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:height="0dp"
        android:onClick="goToLanguageHome"
        android:text="@string/language_button" />

    <Button
        android:textSize="22sp"
        android:id="@+id/quick_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_weight=".5"
        android:height="0dp"
        android:onClick="goToUserSelectedScreen"
        android:text="@string/quick_button" />

</LinearLayout>