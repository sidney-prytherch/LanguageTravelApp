<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/blah"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/wordsearch_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Wordsearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crossword_button" />

    <Button
        android:id="@+id/crossword_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Crossword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:orientation="horizontal">
             <edu.wit.mobileapp.languagetravelapp.PuzzleBlackSquare
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:background="#000"
                 android:layout_weight="1"/>

             <edu.wit.mobileapp.languagetravelapp.PuzzleBlackSquare
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:background="#444"
                 android:layout_weight="1"/>
             <edu.wit.mobileapp.languagetravelapp.PuzzleBlackSquare
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:background="#666"
                 android:layout_weight="1"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:orientation="horizontal">
             <edu.wit.mobileapp.languagetravelapp.PuzzleBlackSquare
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:background="#133"
                 android:layout_weight="1"/>
             <edu.wit.mobileapp.languagetravelapp.PuzzleBlackSquare
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:background="#166"
                 android:layout_weight="1"/>
             <edu.wit.mobileapp.languagetravelapp.PuzzleBlackSquare
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:background="#199"
                 android:layout_weight="1"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:orientation="horizontal">
             <edu.wit.mobileapp.languagetravelapp.PuzzleBlackSquare
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:background="#331"
                 android:layout_weight="1"/>
             <edu.wit.mobileapp.languagetravelapp.PuzzleBlackSquare
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:background="#441"
                 android:layout_weight="1"/>
             <edu.wit.mobileapp.languagetravelapp.PuzzleBlackSquare
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:background="#771"
                 android:layout_weight="1"/>
         </LinearLayout>

     </LinearLayout>


</android.support.constraint.ConstraintLayout>